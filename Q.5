#include <stdio.h>

void copyArray(int *src, int *dest, int size)
{
    int *ptrSrc = src;
    int *ptrDest = dest;

    for (int i = 0; i < size; i++) 
    {
        *(ptrDest + i) = *(ptrSrc + i);
    }
}

int main() {
    int src[] = {10, 20, 30, 40, 50};
    int dest[5];
    int size = sizeof(src) / sizeof(src[0]);

    copyArray(src, dest, size);

    printf("Elements in destination array:\n");
    for (int i = 0; i < size; i++)
    {
        printf("%d ", *(dest + i));
    }
    printf("\n");

    return 0;
}
