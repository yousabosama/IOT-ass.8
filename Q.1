#include <stdio.h>

int sumArray(int *arr, int size) 
{
    int sum = 0;
    int *ptr = arr;
    for (int i = 0; i < size; i++) 
    {
        sum += *(ptr + i);
    }
    return sum;
}

int main() {
    int arr[] = {2, 4, 6, 8, 10};
    int size = sizeof(arr) / sizeof(arr[0]);
    int result = sumArray(arr, size);
    printf("Sum = %d\n", result);
    return 0;
}
