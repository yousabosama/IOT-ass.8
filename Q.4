#include <stdio.h>

int smallestElement(int *arr, int size) 
{
    int *ptr = arr;
    int min = *ptr;

    for (int i = 1; i < size; i++) 
    {
        if (*(ptr + i) < min) 
        {
            min = *(ptr + i);
        }
    }

    return min;
}

int main() 
{
    int arr[] = {5, 2, 9, 1, 7};
    int size = sizeof(arr) / sizeof(arr[0]);
    int minValue = smallestElement(arr, size);
    printf("Smallest element = %d\n", minValue);
    return 0;
}
