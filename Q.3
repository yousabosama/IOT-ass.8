#include <stdio.h>

void readAndPrintReverse() 
{
    int arr[10];
    int *ptr = arr;

    printf("Enter 10 integers:\n");
    for (int i = 0; i < 10; i++) 
{
        scanf("%d", ptr + i);
    }

    printf("Numbers in reverse order:\n");
    for (int i = 9; i >= 0; i--)
{
        printf("%d ", *(ptr + i));
    }
    printf("\n");
}

int main() 
{
    readAndPrintReverse();
    return 0;
}
